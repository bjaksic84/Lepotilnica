# Turso Database (get these from `turso db show <name>` and `turso db tokens create <name>`)
TURSO_DATABASE_URL=libsql://your-db-name.turso.io
TURSO_AUTH_TOKEN=your-auth-token

# Admin Login
ADMIN_PASSWORD=your-admin-password

# WebSocket Server (Rust)
# For local dev, Shuttle runs on localhost:8000
# For production, set to your Shuttle deployment URL
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws
WS_BROADCAST_URL=http://localhost:8000/broadcast
